<%# <%= render @livro %>
<h1>Alterar livro</h1>
<%= link_to "Voltar", livros_path, class:"btn btn-secondary" %>
<hr> 
<form>
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" autocomplete="off">
  <div class="mb-3">
    <label for="livro_nome" class="form-label">Nome</label>
    <input type="text" class="form-control" name="livro[nome]" id="livro_nome" value="<%= @livro.nome%>" disabled>
  </div>
  <div class="mb-3">
    <label for="livro_editora" class="form-label">Editora</label>
    <input type="text" class="form-control" name="livro[editora]" id="livro_editora" value="<%= @livro.editora%>" disabled>
  </div>
  <div class="mb-3">
    <label for="livro_autor" class="form-label">Autor</label>
    <input type="text" class="form-control" name="livro[autor]" id="livro_autor" value="<%= @livro.autor%>" disabled>
  </div>
  <div class="mb-3">
    <label for="livro_preco" class="form-label">Pre√ßo</label>
    <input type="number" class="form-control" name="livro[preco]" id="livro_preco" value="<%= @livro.preco%>" disabled>
  </div>
</form>
<div style="display: flex; flex-direction: row; justify-content: space-between">
  <%= link_to "Alterar este livro", edit_livro_path(@livro), class:"btn btn-warning" %>
  <%= button_to "Apagar este livro", @livro, method: :delete, class:"btn btn-danger" %>
</div>

